{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "size": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "unit": {
      "type": "enumeration",
      "enum": [
        "ml",
        "l",
        "g",
        "kg"
      ]
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "sale": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "category": {
      "model": "category",
      "via": "products"
    },
    "flavors": {
      "collection": "flavor",
      "via": "products",
      "dominant": true
    }
  }
}
